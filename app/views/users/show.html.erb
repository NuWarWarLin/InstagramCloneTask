<%= render 'shared/navigation' %>
<%= render 'shared/messages' %>
<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>
<div class= "d-flex justify-content-center">
    <%= image_tag(@user.profile.url, size: "150",class: "rounded-circle") if @user.profile? %>
</div>
    <% if logged_in? && @user == current_user %>
        <div class="text-center mt-4">
            <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-info" %>
            <%= link_to "Delete Account", user_path(@user), method: :delete, data: {confirm: "Are you sure?" }, class: "btn btn-outline-danger" %>
        </div>
    <% end %>
<h3 class="text-center mt-4">Posts</h3>